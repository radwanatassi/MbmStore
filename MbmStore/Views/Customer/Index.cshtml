@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@{ ViewData["Title"] = "Customers"; }



<a asp-controller="Home" asp-action="Index">Home</a>
<head>
    <style>
        table, th, td {
            border: 1px solid black;
        }
    </style>
</head>

<div class="container">
    <div class="row">
        <div style="width: 1000px; height:auto; float:left; margin:10px">
           

                <h2>Customers</h2>

                <table style="width:100%">
                    <tr>
                        <th width="150px">First Name</th>
                        <th width="150px">Last Name</th>
                        <th width="90px">Age</th>
                        <th width="100px">Phone No.</th>
                        <th width="200px">Invoices</th>

                        <th width="500px">Address</th>
                    </tr>

                    @foreach (var cus in ViewBag.Customers)
                    {
                <tr>
                    <td align="center" width="150px">@cus.FirstName</td>
                    <td align="center" width="150px">@cus.LastName</td>
                    <td align="center" width="90px">@cus.Age</td>

                    <td align="center" width="200">
                        @foreach (var p in @cus.PhoneNumbers)
                        {

                            <label>
                                @p
                            </label><br />
                        }
                    </td>

                    <td align="center" width="200">
                        @foreach (var invoice in @cus.Invoices)
                        {

                            <label>
                                @invoice.TotalPrice
                            </label><br />
                        }
                    </td>
                    <td align="center" width="500">@cus.Address, @cus.Zip, @cus.City</td>



                </tr>
                    }
                    </table>

                   </div>
        </div>
</div>
            
